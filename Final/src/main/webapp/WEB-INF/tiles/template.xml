<tiles-definitions>
	<definition name="buyer" template="/WEB-INF/tiles/layout_buyer.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/layout/header_buyer.jsp"></put-attribute>
		<put-attribute name="body" />
